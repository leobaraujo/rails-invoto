<%= form_with(model: participant) do |form| %>
  <% if participant.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
        <% participant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :cpf, style: "display: block" %>
    <%= form.text_field :cpf %>
  </div>

  <div>
    <%= form.label :avatar, style: "display: block" %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.label :region_id, style: "display: block" %>
    <%= form.collection_select :region_id, Region.all, :id, :name, prompt: true %>
  </div>

  <div>
    <%= form.label :microregion_id, style: "display: block" %>
    <%= form.collection_select :microregion_id, Microregion.all, :id, :name, prompt: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
