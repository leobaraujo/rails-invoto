<%= form_with(model: segment) do |form| %>
  <% if segment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(segment.errors.count, "error") %> prohibited this segment from being saved:</h2>

      <ul>
        <% segment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <% if segment.persisted? %>
    <div>
      <%= form.label :status, style: "display: block" %>
      <%= form.text_field :status %>
    </div>
  <% else %>
    <%= form.hidden_field :status, value: :inactive %>
  <% end %>


  <div>
    <%= form.label :region_id, style: "display: block" %>
    <%= form.collection_select :region_id, Region.all, :id, :name, prompt: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
